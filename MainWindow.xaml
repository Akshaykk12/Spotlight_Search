<Window x:Class="GlassSearchBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Glass Search Bar" Height="75" Width="700"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        Opacity="0.8"
        Background="Transparent">

    <Border Background="White" CornerRadius="10">
        <Grid>
            <TextBox x:Name="SearchTextBox" Margin="10"
                     Background="Transparent"
                     BorderBrush="White"
                     BorderThickness="1"
                     FontSize="16"
                     VerticalContentAlignment="Center" />

            <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Rectangle Width="1" Grid.Column="0" Fill="Gray" Margin="0,5" />
                <Image Source="SearchIcon.png" Width="20" Height="20" Margin="5" Grid.Column="1" />
            </Grid>
        </Grid>
    </Border>
</Window>
